<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VendingMachine.CompanyPage">
  <Grid RowDefinitions="Auto, Auto, *" Margin="20 10">
    <TextBlock Text="Компании" Margin="0 5"/>
    <Button Grid.Row="1" Content="Добавить компанию" x:Name="CreateCompany_btn" Click="CreateCompanyBtn_Click"/>
    <DataGrid x:Name="Company_dg" AutoGenerateColumns="True" 
			  GridLinesVisibility="All" 
			  RowBackground="LightGray"
			  IsReadOnly="True"
			  CanUserReorderColumns="True"
			  CanUserResizeColumns="True"
			  CanUserSortColumns="False"
        Grid.Row="2" Margin="0 5">
    </DataGrid>
  </Grid>
</UserControl>
