<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VendingMachine.CreateCompanyWindow"
        Title="CreateCompanyWindow">
  <Grid Margin="60 10" ColumnDefinitions="*, *">
    <StackPanel Margin="5">
      <TextBlock Text="Название компании" FontSize="12" Padding="3"/>
      <TextBox Watermark="Введите название регистрируемой компании" x:Name="CompanyName_tb"/>
      <TextBlock Text="Юридический адрес" FontSize="12" Padding="3"/>
      <TextBox Watermark="Введите полный адрес регистрируемой компании" x:Name="Address_tb"/>
      <TextBlock Text="Адрес сайта компании" FontSize="12" Padding="3"/>
      <TextBox Watermark="Введите адрес сайта регистрируемой компании" x:Name="Website_tb"/>
      <TextBlock Text="Код регистрации" FontSize="12" Padding="3"/>
      <TextBox IsReadOnly="True" x:Name="Code_tb"/>
      <Button Content="Перегенирировать код регистрации" FontSize="12" Margin="5" Click="RegeneratedCodeBtn_Click"/>
    </StackPanel>
    <StackPanel Grid.Column="1" Margin="5">
      <TextBlock Text="Имя ответственного лица" FontSize="12" Padding="3"/>
      <TextBox Watermark="Введите имя ответственного лица" x:Name="ResponsiblePersonName_tb"/>
      <TextBlock Text="Фамилия ответственного лица" FontSize="12" Padding="3"/>
      <TextBox Watermark="Введите фамилию ответственного лица" x:Name="ResponsiblePersonSurname_tb"/>
      <TextBlock Text="Отчество ответственного лица" FontSize="12" Padding="3"/>
      <TextBox Watermark="Введите отчество ответственного лица" x:Name="ResponsiblePersonMiddlename_tb"/>
      <TextBlock Text="Телефон ответственного лица" FontSize="12" Padding="3"/>
      <TextBox Watermark="Введите телефон ответственного лица" x:Name="ResponsiblePersonPhone_tb"/>
      <TextBlock Text="Email ответственного лица" FontSize="12" Padding="3"/>
      <TextBox Watermark="Введите email ответственного лица" x:Name="ResponsiblePersonEmail_tb"/>
      <TextBlock Text="Статус" FontSize="12" Padding="3"/>
      <TextBox IsReadOnly="True" Text="Заключен договор" x:Name="Status_tb"/>
      <Button Content="Добавить компанию" FontSize="12" Margin="5" Click="CreateCompanyBtn_Click"/>
    </StackPanel>
  </Grid>
</Window>
