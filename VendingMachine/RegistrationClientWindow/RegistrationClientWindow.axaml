<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VendingMachine.RegistrationClientWindow" Icon="avares://VendingMachine/Image/AppIconVM.jpg"
        Title="RegistrationClientWindow" CanResize="False" Width="400" Height="300">
  <StackPanel Margin="40 10">
    <TextBlock Text="Регистрационный код компании" Margin="0 5"/>
    <TextBox Watermark="Введите регистрационный код компании" x:Name="CompanyCode_tb"/>
    <TextBlock Text="Придумайте пароль пользователя" Margin="0 5"/>
    <TextBox Watermark="Введите пароль" x:Name="Password_tb"/>
    <Button Content="Зарегистрироваться" Margin="0 10" Click="registrationBtn_Click"/>
    <TextBlock x:Name="info_tb" IsVisible="False"/>
  </StackPanel>
</Window>
