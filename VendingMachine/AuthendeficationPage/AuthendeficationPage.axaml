<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VendingMachine.AuthendeficationPage">
  <StackPanel Margin="100 50">
    <TextBlock x:Name="login_tblock">Ваш логин:</TextBlock>
    <TextBox x:Name="login_tb" Margin="0 5" Watermark="Введите email или телефон"/>
    <TextBlock x:Name="password_tblock">Ваш пароль:</TextBlock>
    <TextBox x:Name="password_tb" Margin="0 5" Watermark="Введите пароль"/>
    <Button Content="Войти" Margin="0 5" x:Name="enter_btn" Click="enterButton_Click"/>
    <TextBlock x:Name="info_tb" IsVisible="False"/>
  </StackPanel>
</UserControl>
